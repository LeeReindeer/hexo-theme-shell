
<div class="blog_post">
    <div class="article_content" >
    <!--article Title -->
    <h2 class="blog_post_title text-center">
        <a href="<%- config.root %><%- post.path %>">
            <%- post.title || post.link%>
        </a>
    </h2>
    <!-- Date and Author -->
    <p class="blog_post_meta text-center text-muted">
        <%= post.date.format(config.date_format) %>
        <% if(config.author) { %>
            by <%- config.author %>
        <% } %>
    </p>
    <!-- Content -->
    <%- post.content %>
    </div>
</div>
<hr />
<!--scroll bar-->
<%- partial('_partial/scroll') %>
<!--open comment-->
<div>
    <button class="btn open_btn" id="open_btn" value="Open Comment">Open Comment</button>
</div>
